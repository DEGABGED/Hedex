<p id="notice"><%= notice %></p>

<h2>
  TESDA Course Sector: <%= @tesda_course_sector.tcs_name %>
</h2>

</br>

<h3> Sector summary </h3>

<table class = "table-bordered info-table">
  <tr>
    <th>Course Sector Description</th>
    <td><%= @tesda_course_sector.tcs_desc %></td>
  </tr>
</table>

</br>

<h3>TESDA Courses under <%= @tesda_course_sector.tcs_name %></h3>

<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Duration in hours</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @tesda_courses.each do |tesda_course| %>
      <tr>
        <td><%= tesda_course.tc_name %></td>
        <td><%= tesda_course.tc_hrs_dur %></td>
        <td><%= link_to 'Show course', tesda_course %></td>
      <% if admin_signed_in? %>
        <td><%= link_to 'Edit course', edit_tesda_course_path(tesda_course) %></td>
        <td><%= link_to 'Destroy course', tesda_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

<% if admin_signed_in? %>
<%= link_to 'Edit course sector', edit_tesda_course_sector_path(@tesda_course_sector) %> |
<% end %>
<%= link_to 'Back', tesda_course_sectors_path %>
