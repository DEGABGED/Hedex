<p id="notice"><%= notice %></p>

<h1>TESDA Courses</h1>

<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration in hours</th>
      <th>Course sector</th>
      <% if admin_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tesda_courses.each do |tesda_course| %>
      <tr>
        <td><%= tesda_course.tc_name %></td>
        <td><%= tesda_course.tc_hrs_dur %></td>
        <td><%= tesda_course.tesda_course_sector.tcs_name %></td>
        <td><%= link_to 'Show', tesda_course %></td>
      <% if admin_signed_in? %>
        <td><%= link_to 'Edit', edit_tesda_course_path(tesda_course) %></td>
        <td><%= link_to 'Destroy', tesda_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin_signed_in? %>
<%= link_to 'New TESDA Course', new_tesda_course_path %>
<% end %>
