<p id="notice"><%= notice %></p>

<h1><%= @institution.name %></h1>
<h2>Contact numbers</h2>

<table class = "table-bordered stats-table">
  <thead>
    <tr>
      <th>Contact num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inst_contacts.each do |inst_contact| %>
      <tr>
        <td><%= inst_contact.contact_num %></td>
        <td><%= link_to 'Show', [@institution, inst_contact] %></td>
        <td><%= link_to 'Edit', edit_institution_inst_contact_path(@institution, inst_contact) %></td>
        <td><%= link_to 'Destroy', [@institution, inst_contact], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inst Contact', new_institution_inst_contact_path %>
